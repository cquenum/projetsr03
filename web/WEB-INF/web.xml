<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UtilisateurServlet</servlet-name>
        <servlet-class>com.mutamba.controller.UtilisateurServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionServlet</servlet-name>
        <servlet-class>com.mutamba.controller.QuestionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReponseServlet</servlet-name>
        <servlet-class>com.mutamba.controller.ReponseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionnaireServlet</servlet-name>
        <servlet-class>com.mutamba.controller.QuestionnaireServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ParcoursServlet</servlet-name>
        <servlet-class>com.mutamba.controller.ParcoursServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SupprUtilisateurServlet</servlet-name>
        <servlet-class>com.mutamba.controller.UtilisateurSupprServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UtilisateurModifServlet</servlet-name>
        <servlet-class>com.mutamba.controller.UtilisateurModifServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompetenceServlet</servlet-name>
        <servlet-class>com.mutamba.controller.CompetenceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompetenceModifServlet</servlet-name>
        <servlet-class>com.mutamba.controller.CompetenceModifServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompetenceSupprServlet</servlet-name>
        <servlet-class>com.mutamba.controller.CompetenceSupprServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UtilisateurServlet</servlet-name>
        <url-pattern>/utilisateurs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionServlet</servlet-name>
        <url-pattern>/questions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReponseServlet</servlet-name>
        <url-pattern>/reponses</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionnaireServlet</servlet-name>
        <url-pattern>/questionnaires</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ParcoursServlet</servlet-name>
        <url-pattern>/parcours</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SupprUtilisateurServlet</servlet-name>
        <url-pattern>/suppr_utilisateur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UtilisateurModifServlet</servlet-name>
        <url-pattern>/modif_utilisateur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompetenceServlet</servlet-name>
        <url-pattern>/competences</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompetenceModifServlet</servlet-name>
        <url-pattern>/modif_competence</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompetenceSupprServlet</servlet-name>
        <url-pattern>/suppr_competence</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
